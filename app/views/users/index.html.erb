<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>



<%= render 'books/newbook', booknew: @booknew %>



<h1>Users</h1>
<table>
  <tr>
  <th>image</th>
  <th>name</th>
  <th></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image(80, 80) %></td>
    <td><%= user.name %></td>
    <td><%= user.introduction %></td>
    <td><%= link_to 'Show', user_path(user.id) %></td>
  </tr>
  <% end %>

</table>
