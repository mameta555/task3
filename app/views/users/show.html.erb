<div class="row">
  <div class="col col-md-3">
  <h1>User info</h1>

    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </table>

    <div class="col pb-2 d-grid gap-2 col-6 mx-auto">
    
        <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
    </div>

    <%= render 'books/newbook', booknew: @booknew %>
  </div>

  <div class="col col-md-8 offset-md-1">
  <!-- ユーザーの投稿一覧 -->
  <table class="table">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>

        <%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(80,80) %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>

    </tr>
    <% end %>
  </table>
  </div>
</div>