<h1>User info</h1>

  <%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>
<%= link_to "編集", edit_user_path(current_user.id) %>
<h1>New book</h1>
<%= form_with model: @booknew,url: '/books', method: :post do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<!-- ユーザーの投稿一覧 -->
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag @user.get_profile_image(80,80) %></td>
    <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>

      <% end %>
    </td>
    <td><%= book.body %></td>
      <% if @user == current_user %>
