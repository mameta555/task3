<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="col pb-2 d-grid gap-2 col-6 mx-auto">
  <h1>Editing book</h1>
  <%= form_with model: @book, method: :patch do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>opinion</h4>
    <%= f.text_area :body %><br>


    <span><%= f.submit'Update Book',class:'btn btn-success' %></span>

  <% end %>

  <div class=link>
    <%= link_to "Show", book_path(@book.id) %>
    <span>|</span>
    <%= link_to "Back", books_path %>
  </div>
</div>