<h1>User info</h1>
  <%= image_tag @book.get_profile_image(100, 100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @book.name %></th>
  </tr>
    <th>introduction</th>
    <th><%= @book.introduction %></th>
</table>


<%= render 'newbook', booknew: @booknew %>

<div>

<h4>Books</h4>

  <table>
    <tr>
      <th colspan="1"></th>
      <th colspan="2">Title</th>
      <th colspan="3">Opinion</th>
    </tr>

      <% @books.each do |book| %>
      <tr>
        <td colspan="1"><%= image_tag book.user.get_profile_image(80, 80) %></td>
        <td colspan="2"><%= link_to book.title,book_path(book.id) %></td>
        <td colspan="3"><%= book.body %></td>

      </tr>
      <% end %>

  </table>
</div>

