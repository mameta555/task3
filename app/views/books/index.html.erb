<h1>New book</h1>
<%= form_with model: @book,url: '/books', method: :post do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<div>
<h4>Books</h4>

  <table>
    <tr>
      <th colspan="1"></th>
      <th colspan="2">Title</th>
      <th colspan="3">Opinion</th>
    </tr>
  
      <% @books.each do |book| %>
      <tr>
        <td colspan="1"><%= image_tag 'no_image.jpg' %></td>
        <td colspan="2"><%= link_to book.title,book_path(book.id) %></td>
        <td colspan="3"><%= book.body %></td>
  
      </tr>
      <% end %>
  
  </table>
</div>

