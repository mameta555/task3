<div class="col pb-2 d-grid gap-2 col-6 mx-auto">
  <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
<h1>New book</h1>
<%= form_with model: booknew,url: books_path, method: :post do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>

  <h4>Opinion</h4>
    <%= f.text_area :body %>

  <div><%= f.submit 'Create Book', class:'btn btn-success' %></div>

<% end %>