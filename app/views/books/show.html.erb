<h1>New book</h1>

<h1>Book detail</h1>
<table>
  <td>
    <%= image_tag 'no_image.jpg' %><br>
    <%= @book.user.name %>
  </td>
  <td>
    <%= link_to book_path(@book.id) do %>
      <%= @book.title %>
    <% end %>
  </td>
  <td>
    <%= @book.body %>
  </td>

  <% if @book.user == current_user %>
  <td>
    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
  </td>
  <td>
    <%= link_to "Edit", edit_book_path(@book.id) %>
  </td>
  <% end %>
</table>


